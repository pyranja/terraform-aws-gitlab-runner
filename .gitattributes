# enable git auto handling
* text=auto

# force endings for some platform specific files
*.md      eol=lf
*.sh      eol=lf
*.xml     eol=lf
*.json    eol=lf
*.sql     eol=lf
*.yaml    eol=lf
*.yml     eol=lf

*.ps1     eol=crlf
*.psm1    eol=crlf
*.psd1    eol=crlf
*.ps1xml  eol=crlf
*.bat     eol=crlf

*.pdf     -text
